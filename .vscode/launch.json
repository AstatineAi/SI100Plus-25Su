    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build Markdown Slides",
            "type": "node-terminal",
            "request": "launch",
            "command": "reveal-md ${file} -w --template ./assets/reveal.html --preprocessor ./assets/preproc.js --scripts \"./assets/menu/menu.js,./assets/inject.js\"",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
        },
    ]
}